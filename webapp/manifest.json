{
    "_version": "1.1.0",

    "sap.app": {
        "id": "com.ss.jpb.rp",
        "type": "application",
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
        "applicationVersion": {
            "version": "1.0.0"
        },
        
        "dataSources": {
            "apiSalesDemo": {
              "uri": "https://apisalesdemo2.successfactors.eu/odata/v2/",
              "type": "OData",
              "settings": {
                "odataVersion": "2.0"
              }
            }
          }
    },

    "sap.ui":{
        "supportedThemes": ["sap_fiori_3_dark", "sap_horizon"],
        "deviceTypes":{
            "desktop": true,
            "phone": true,
            "tablet": true
        },
        "technology": "UI5",
        "fullWidth": true
    },

    "sap.ui5":{

        "dependencies": {
            "minUI5Version": "1.100.2",
            "libs": {
                "sap.m":{"minVersion": "1.100.2"},
                "sap.ui.core":{"minVersion": "1.100.2"},
                "sap.ui.layout":{"minVersion": "1.100.2"}
            }
        },

        "rootView":{
            "viewName": "com.ss.jpb.rp.view.App",
            "type": "XML",
            "id": "idRoot"
        },

        "routing": {
            "config":{
                "viewPath": "com.ss.jpb.rp.view",
                "viewType": "XML",
                "controlId": "appCon",
                "clearControlAggregation": true
            },
            "routes":[
                {
                    "name": "home",
                    "pattern": "",
                    "target":["home"] 
                },
                {
                    "name": "family",
                    "pattern": "family",
                    "target":["family", "familyDetails"]
                },
                {
                    "name": "role",
                    "pattern": "role",
                    "target":["role"]
                },
                {
                    "name": "competencies",
                    "pattern": "competencies",
                    "target":["competencies"]
                }
            ],
            "targets": {
                "home":{
                    "viewName": "Home",
                    "viewId": "idHome",
                    "controlAggregation": "pages"
                },
                "family":{
                    "viewName": "Family",
                    "viewId": "idFamily",
                    "controlAggregation": "pages"
                },
                "familyDetails":{
                    "viewName": "FamilyDetails",
                    "viewId": "idFamilyDetails",
                    "controlAggregation": "detailPages"
                },
                "role":{
                    "viewName": "Role",
                    "viewId": "idRole",
                    "controlAggregation": "pages"
                },
                "competencies":{
                    "viewName": "Competencies",
                    "viewId": "idCompetencies",
                    "controlAggregation": "pages"
                }
                
            }
        },

        "contentDensities": {
            "compact": true, 
            "cozy": true
        },

        "models": {
            "":{
                "type": "sap.ui.model.json.JSONModel",
                "uri": "models/fruits.json",
                "settings": {}
            },
            
            "odataModel":{
                "dataSource": "apiSalesDemo",
                "settings": {

                }
            },

            "i18n":{
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
                    "bundleUrl": "i18n/i18n.properties"
                }
            }
        }
    }
}