<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="com.ss.jpb.rp.controller.Home"
>
    <Page title="{i18n>appTitle}" >
        <headerContent>
        </headerContent>
        
        <content>

            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                header="{i18n>Families}"
                subheader="{i18n>descriptionFamilies}"
                press="onFamily"
            >
                <TileContent >                    
                    <ImageContent src="sap-icon://family-care" />
                </TileContent>
            </GenericTile>

            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                header="{i18n>Roles}"
                subheader="{i18n>descriptionRoles}"
                press="onRole"
            >
                <TileContent >                    
                    <ImageContent src="sap-icon://role" />
                </TileContent>
            </GenericTile>

            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                header="{i18n>Competencies}"
                press="onCompetencies"
                subheader=""
            >
                <TileContent>                    
                    <ImageContent src="sap-icon://documents" />
                </TileContent>
            </GenericTile>

        </content>
        
    </Page>
</mvc:View>
